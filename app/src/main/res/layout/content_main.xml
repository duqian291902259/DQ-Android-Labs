<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/textColor"
    android:orientation="vertical"
    android:paddingTop="50dp">

    <RelativeLayout
        android:id="@+id/rl_demo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:layout_marginTop="50dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:elevation="20dp"
        android:translationZ="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_demo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:elevation="30dp"
            android:text="Kotlin/Flutter"
            android:textSize="30sp"
            android:translationZ="10dp" />

    </RelativeLayout>


    <site.duqian.test.ProgressView
        android:id="@+id/progressView2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        app:firstPbColor="#C6A9A9"
        app:progress="10"
        app:progressShape="round_rectangle"
        app:secondPbColor="#FFFFFF"
        app:strokeSize="3dp"
        app:textColor="#FFFFFF"
        app:textDimension="15dp" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@mipmap/arrow_icon" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@mipmap/arrow_icon"
        android:tint="@android:color/white" />

</LinearLayout>